@model P4TableRelations.Models.Post;

<div class="container-comments">
    @foreach(var item in Model.Comments)
    {
        <div class="bg-white p-3 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <span class="font-weight-bold">@item.UserName</span>
                <span class="date text-black-50">@item.Date</span>
            </div>
            <p class="mt-2">@item.Text</p>
            <hr class="mt-3">
        </div>
    }

    <div class="bg-light p-3">
        <form asp-controller="Comment" asp-action="Save" method="post">
            <input type="hidden" name="PostId" value="@Model.Id" />
            <div class="form-group mb-2">
                <label asp-for="UserName" class="control-label">Usuario</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3"> <!-- Added margin-bottom -->
                <textarea name="Text" class="form-control" cols="30" rows="10" placeholder="Escribe un comentario"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Publicar</button>
        </form>
    </div>
</div>