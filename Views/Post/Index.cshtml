@model IEnumerable<P4TableRelations.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Publicaciones</h1>
    <p>
        <a class="add-button" asp-action="Create"><i class="fa fa-plus"></i></a>
    </p>
</div>
<div class="container px-4 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model) {
                <div class="card">
                    <div class="row px-3">
                        <div class="profile-pic-container">
                            <img class="profile-pic" src="@item.PhotoUser">
                        </div>
                        <div class="flex-column ml-3">
                            <h3 class="mb-0 font-weight-normal">@Html.DisplayFor(modelItem => item.UserName)</h3>
                        </div>
                    </div>
                    <div class="row px-3">
                        <div class="post-image-container">
                            <img class="post-image" src="@item.ImagePost">
                        </div>
                    </div>
                    <div class="row px-3">
                        <p class="post-date">@Html.DisplayFor(modelItem => item.Published)</p>
                    </div>
                    <div class="row px-3">
                        <div class="col">
                            <a class="btn btn-primary ml-auto" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-danger ml-auto" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                            <a class="btn btn-success ml-auto" asp-action="Details" asp-route-id="@item.Id">Comentarios</a>
                        </div>
                    </div>
                </div>
                <hr />
            }
        </div>
    </div>





